<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme â€” NoActionBar so WebView fills edge-to-edge -->
    <style name="Theme.StudyPlan" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!-- Allow drawing behind nav bar on gesture-nav devices -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
        <!-- Smooth splash-to-content transition -->
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
        <!-- Ensure hardware acceleration -->
        <item name="android:hardwareAccelerated">true</item>
    </style>

    <style name="WindowAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>
</resources>
